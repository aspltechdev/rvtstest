{
    "name": "rvts-monorepo",
    "private": true,
    "workspaces": [
        "apps/frontend",
        "apps/admin",
        "apps/backend"
    ],
    "scripts": {
        "dev:frontend": "npm run dev -w apps/frontend",
        "dev:admin": "npm run dev -w apps/admin",
        "dev:backend": "npm run dev -w apps/backend",
        "build:frontend": "npm run build -w apps/frontend",
        "build:admin": "npm run build -w apps/admin",
        "build:backend": "npm run build -w apps/backend",
        "postinstall": "prisma generate --schema=apps/backend/prisma/schema.prisma"
    },
    "dependencies": {
        "@hookform/resolvers": "^3.9.0",
        "@prisma/client": "^5.10.2",
        "axios": "^1.6.0",
        "bcryptjs": "^2.4.3",
        "clsx": "^2.1.0",
        "dotenv": "^16.3.1",
        "framer-motion": "^11.0.0",
        "lucide-react": "^0.300.0",
        "next": "14.2.15",
        "next-auth": "^4.24.5",
        "nodemailer": "^6.9.7",
        "pg": "^8.11.3",
        "react": "^18",
        "react-dom": "^18",
        "react-dropzone": "^14.2.3",
        "react-hook-form": "^7.49.0",
        "tailwind-merge": "^2.2.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/node": "^20.10.0",
        "@types/nodemailer": "^6.4.14",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "autoprefixer": "^10.4.16",
        "eslint": "^8",
        "eslint-config-next": "14.2.15",
        "postcss": "^8",
        "prisma": "^5.10.2",
        "tailwindcss": "^3.4.1",
        "typescript": "^5"
    }
}