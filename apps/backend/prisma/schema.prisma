generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id                 String   @id @default(cuid())
  slug               String   @unique
  name               String
  title              String
  description        String
  images             String[]
  whyThisProduct     String?
  whatDoesItDo       String?
  features           String[]
  useCases           String[]
  published          Boolean  @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  adjustments        String?
  category           String?
  installationManual String?
  maxWeight          String?
  screenSize         String?
  sku                String?
  technicalDataSheet String?
  technicalDrawing   String?
  vesa               String?
  material           String?
  certifications     String[]
  videoUrl           String?
  fusionUrl          String?
  relatedProducts    Product[] @relation("RelatedProducts")
  relatedTo          Product[] @relation("RelatedProducts")
}

model Otp {
  id        String   @id @default(cuid())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model ContactQuery {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String
  phoneNumber String?
  subject   String
  message   String
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
